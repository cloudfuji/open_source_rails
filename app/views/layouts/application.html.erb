  <head>  
    <title>Open Source Rails</title> 
    <%= stylesheet_link_tag :reset_styles %>
    <%= stylesheet_link_tag :main %>
    <link href="/colorbox/example2/colorbox.css" media="screen" rel="stylesheet" type="text/css" /> 
    <%= stylesheet_link_tag "validationEngine.jquery.css" %>
    <%= yield(:head) %>
    <script type="text/javascript">

      var _gaq = _gaq || [];
      _gaq.push(['_setAccount', 'UA-32378289-1']);
      _gaq.push(['_trackPageview']);

      (function() {
      var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
      ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
      var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
      })();

    </script>    
  </head>
  <body>
    <div id="wrap">
      <div id="header_container">
	    <div id="header_stripe"></div>
        <!--dont put shit in this div^ -->
    
        <div id="header">
          <%= link_to "",  root_url, :class => "logo_link" %>
          <!--start of nav-->
          
          <ul id="list-nav"> 
            <%- if user_signed_in? %>
              <li><span><%= current_user.username %></span></li>
              <li><%= link_to "Sign out", destroy_user_session_path %></li>
            <%- else %>
              <li><%= link_to "Sign In", new_user_session_path %></li>
            <%- end %>  
              <li <% if current_page?(new_project_url) %>class="active"<% end %>> <a href="/projects/new">Submit</a></li>
          </ul> 
          <!--end of nav--> 
          <p class="header">Only the best</p>
  	    </div>

      </div>      
      
      <div id="main">
  	    <%= yield %>
      </div>
    </div>
    <div id="footer_stripe">
      <div id="footer">
	    <p>Powered by Cloudfuji | Special thanks to <a style="color:#f9f8de" href="http://twitter.com/#!/railsjedi">@railsjedi</a></p>
      </div>
    </div>
    <%= javascript_include_tag :application %>
    <script type="text/javascript" src="/colorbox/colorbox/jquery.colorbox.js"></script>

  </body>
</html>
