<div id="feature_holder">
  <div id="feature">
  </div>
  <div id="feature_description">
    <p class="feature_title">
      <%= @featured_project.title %>
    </p>
    <p class="feature_subtitle">
      <%= @featured_project.project_category.name %>
    </p><br/>
    <p class="feature_discription">
      <%= @featured_project.short_desc %>
      <%= link_to "Find out more!",@featured_project, :style=>"text-decoration:none;color:#003366" %>
    </p>
  </div>
</div>

