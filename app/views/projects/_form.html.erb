<%- content_for :head do %>
  <%= javascript_include_tag "nested_form" %>
  <%= javascript_include_tag "screenshot_handler" %>
<% end %>

<%= nested_form_for @project, :validate => true do |f| %>

  <div class="field">
    <%= f.label :title, "Name" %>:
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :short_desc, "Short Description" %>:
    <%= f.text_field :short_desc %>
  </div>

  <div class="field">
    <%= f.label :about, "About the application" %>:<br/>
    <%= f.text_area :about %>
  </div>

  <div class="field">
    <%= f.label :license %>:
    <%= f.text_field :license %>
  </div>

  <h3>Author</h3>

  <%= f.fields_for :author do |author_form|%>
    <div class="author">
      <div class="field">
        <%= author_form.label :name %>:
        <%= author_form.text_field :name %>
      </div>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :thumbnail %>: 
    <%= f.file_field :thumbnail %>
  </div>

  <h3>Screenshots</h3>

  <%=f.fields_for :screenshots do |sh_form| %>
    <div class="screenshot">
      <div class="field">
        <%= sh_form.file_field :image, :accept=>"image/*", :class=>"screenshot_input" %>
      </div>
    </div>
  <% end %>
  <div class="add_more">
    <%= f.link_to_add "Add screenshot", :screenshots %>
  </div>

  <div class="field">
    <%= f.label :homepage_url, "Project homepage URL" %>
    <%= f.text_field :homepage_url %>
  </div>

  <div class="field">
    <%= f.label :source_url, "Source URL (url of git repository)" %>
    <%= f.text_field :source_url %>
  </div>

  <div class="actions">
    <%= f.submit "Submit application" %>
  </div>

<% end %>
